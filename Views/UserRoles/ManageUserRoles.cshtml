@model IEnumerable<DragonTracker.Models.ViewModels.ManageUserRolesViewModel>

@{
    ViewData["Title"] = "User Role Assign";
}


<section class="content">

    <!-- Default box -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-people-carry"></i>
                Manage User Roles
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var btuser in Model)
                            {
                                <tr>
                                    <td>@btuser.User.FirstName</td>
                                    <td>@btuser.User.LastName</td>
                                    <td>
                                        <form asp-controller="UserRoles" asp-action="ManageUserRoles" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="@btuser.User.Id">
                                            <div class="row">
                                                <div class="col-8">

                                                    @*<label asp-for="@btuser.Roles" class="control-label">Roles for @btuser.User.FullName</label>*@
                                                    <select asp-for="@btuser.SelectedRoles" class="form-control" asp-items="@btuser.Roles"></select>
                                                </div>
                                                <div class="col-4">
                                                    <input type="submit" value="Assign Roles" class="btn btn-info" />
                                                </div>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                @*@foreach (var btuser in Model)
                    {
                        <form>
                            <div class="card" style="margin:2px">
                                <div class="card-body">
                                    <h2 class="m-t-0 h3"><b>Assign Roles to @btuser.User.FullName</b></h2>
                                    <p class="text-muted font-13 m-b-30">
                                        This form displays the current roles assigned to the user: @btuser.User.FullName. Use the dropdown to select the roles that this user should be assigned. Once roles are selected, click "Assign Roles" to submit the form.
                                    </p>
                                    <hr />

                                </div>
                            </div>
                        </form>
                    }*@
            </div>
        </div>
    </div>
    <!-- /.card -->

</section>
@section scripts{

    <script>
        
            $(document).ready(function () {
                $('.table').DataTable();
            });
    </script>    

}
