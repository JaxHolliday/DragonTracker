@model DragonTracker.Models.Project

@{
    ViewData["Title"] = "Create a Project";
}

<div class="wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Project Add</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form asp-action="Create">
            <div class="card card-primary">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-bookmark"></i>
                        Projects
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Project Name</label>
                        <input type="text" id="inputName" asp-for="Name" class="form-control">
                    </div>
                </div>
                <div class="card-body">
                    <input type="submit" value="Create" class="btn btn-success btn-sm">
                    <a asp-area="" asp-controller="Projects" asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>                    
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
