                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                <a asp-action="Index" class="btn btn-primary btn-sm" >Back to List</a>
            </form>
    </div>
</div>
    
