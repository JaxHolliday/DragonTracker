@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DragonTracker | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @* Favicon *@
    <link rel="apple-touch-icon" sizes="180x180" href="~/Images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/favicon-16x16.png">

    <!-- Font Awesome -->
    <link href="~/css/all.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link href="~/css/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/css/all.min.css" rel="stylesheet" />

    <!-- Ionicons -->
    <link rel="stylesheet" href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Tempusdominus Bbootstrap 4 -->
    <link href="~/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- iCheck -->
    <link href="~/css/icheck-bootstrap.min.css" rel="stylesheet" />

    <!-- JQVMap -->
    <link href="~/css/jqvmap.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/css/adminlte.min.css" rel="stylesheet" />

    <!-- overlayScrollbars -->
    <link href="~/css/OverlayScrollbars.min.css" rel="stylesheet" />

    <!-- Daterange picker -->
    <link href="~/css/daterangepicker.css" rel="stylesheet" />

    <!-- summernote -->
    <link href="~/css/summernote-bs4.css" rel="stylesheet" />

    <!-- Google Font: Source Sans Pro -->
    <link href="//Fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    @* Datatables CSS *@
    <link href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />



    <style>
        #hero {
            width: 100%;
            height: 100vh;
            background-image: url("/Images/dragonlogin.png");
            background-size: cover;            
        }

        
    </style>

</head>

<body id="hero" class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a asp-controller="Home" asp-action="Index" style="color:black"><b>Dragon</b>Tracker</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg"><b>Sign in to start your session</b></p>

                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe" type="checkbox" id="remember">
                                <label asp-for="Input.RememberMe" for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <hr />
                @*<p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
                    </p>*@
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-block btn-primary">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <br />

    <div class="card card-primary" style="width:50%;">
        <div class="card-header">
            <h3 class="card-title"><b>Demo Users</b></h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <span class="badge badge-danger">Demo</span>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <div class="small-box bg-gradient-red">
                        <form id="account" method="post">
                            <div class="inner">
                                <h5><b>Demo Admin</b></h5>

                                <p>Full-Access to application</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-dragon"></i>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-block btn-danger btn-sm">Log In</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col">
                    <div class="small-box bg-gradient-green">
                        <form id="account" method="post">
                            <div class="inner">
                                <h5><b>Demo PM</b></h5>

                                <p>Manages Use and can oversee Projects/Ticket for them and under</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-chess-knight"></i>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="demoEmail" value="DemoPMEmail" class="btn btn-block btn-success btn-sm">Log In</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col">
                    <div class="small-box bg-info">
                        <form id="account" method="post">
                            <div class="inner">
                                <h5><b>Demo Developer</b></h5>

                                <p>Create/work on tickets. Most features available</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-chess-rook"></i>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-block btn-info btn-sm">Log In</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col">
                    <div class="small-box bg-gradient-dark">
                        <form id="account" method="post">
                            <div class="inner">
                                <h5><b>Demo Submitter</b></h5>

                                <p>Limited access</p>

                            </div>
                            <div class="icon">
                                <i class="fas fa-chess-pawn"></i>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-block btn-dark btn-sm">Log In</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->


    <script src="~/js/jquery.min.js"></script>

    <!-- jQuery UI 1.11.4 -->
    <script src="~/js/jquery-ui.min.js"></script>

    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>

    <!-- Bootstrap 4 -->
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!-- ChartJS -->
    <script src="~/js/Chart.min.js"></script>

    <!-- Sparkline -->
    <script src="~/js/sparkline.js"></script>

    <!-- JQVMap -->
    <script src="~/js/jquery.vmap.min.js"></script>
    <script src="~/js/jquery.vmap.usa.js"></script>

    <!-- jQuery Knob Chart -->
    <script src="~/js/jquery.knob.min.js"></script>

    <!-- daterangepicker -->
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/daterangepicker.js"></script>

    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Summernote -->
    <script src="~/js/summernote-bs4.min.js"></script>

    <!-- overlayScrollbars -->
    <script src="~/js/jquery.overlayScrollbars.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>

    @* Datatables JS *@
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tckTble').DataTable({
                scrollY: '50vh',
                scrollX: true,
                scrollCollapse: true,
                paging: false
            });
        });
    </script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}